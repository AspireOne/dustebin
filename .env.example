# Database connection string
DATABASE_URL="postgresql://username:password@localhost:5432/dustebin?schema=public"

# Admin API key for protected routes (e.g., cleanup endpoint)
# In production, set this to a strong random string
CLEANUP_API_KEY="your-strong-api-key-here"

# Optional: Set the port for the application (default: 3000)
# PORT=3000

# Optional: Set the host for the application (default: 0.0.0.0)
# HOST=0.0.0.0

# Optional: Set the log level (default: info)
# LOG_LEVEL=info

# Optional: Set the maximum paste size in bytes (default: 1MB)
# MAX_PASTE_SIZE=1048576

# Optional: Set the rate limit for requests per minute (default: 60)
# RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Optional: Set the rate limit for paste creations per hour (default: 20)
# RATE_LIMIT_PASTES_PER_HOUR=20

# Gemini API key for generating titles and descriptions
GEMINI_API_KEY="your-gemini-api-key-here"

# Cloudflare R2 Configuration
R2_ACCOUNT_ID="your-cloudflare-account-id"
R2_ACCESS_KEY_ID="your-r2-access-key-id"
R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"
R2_BUCKET_NAME="dustebin-images"
R2_PUBLIC_URL="https://pub-xxxx.r2.dev"
