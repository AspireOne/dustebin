# Auto detect text files and perform LF normalization
* text=auto eol=lf

# JS and TS files must always use LF for tools to work
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf

# CSS files must always use LF for tools to work
*.css text eol=lf
*.scss text eol=lf

# HTML files must always use LF for tools to work
*.html text eol=lf

# Markdown files must always use LF for tools to work
*.md text eol=lf

# Prisma schema files must always use LF for tools to work
*.prisma text eol=lf

# SQL files must always use LF for tools to work
*.sql text eol=lf

# YAML files must always use LF for tools to work
*.yml text eol=lf
*.yaml text eol=lf

# These files are binary and should be left untouched
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.webp binary
*.woff binary
*.woff2 binary
*.eot binary
*.ttf binary
*.otf binary
*.svg binary
*.pdf binary
*.zip binary
*.gz binary
*.tar binary
*.tgz binary
*.mp4 binary
*.webm binary
*.ogg binary
*.mp3 binary
*.wav binary

# Exclude files from exporting
.gitattributes export-ignore
.gitignore export-ignore
.github export-ignore
