# Use Node.js LTS as the base image (full version with build tools)
FROM node:20

# Set working directory
WORKDIR /app

# Install pnpm
RUN npm install -g pnpm

# Copy package.json, prisma schema, and related files
COPY package.json pnpm-lock.yaml* ./
COPY prisma ./prisma/

# Install dependencies
RUN pnpm install --no-frozen-lockfile

# Generate Prisma client and rebuild bcrypt
RUN npx prisma generate && npm rebuild bcrypt --build-from-source

# Copy the rest of the application
COPY . .

# Expose the port the app will run on
EXPOSE 3000

# Start the development server
CMD ["pnpm", "dev"]
